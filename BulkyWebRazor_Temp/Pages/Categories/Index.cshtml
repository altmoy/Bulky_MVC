@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<h1> Category List</h1>

<div class="container">
<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class=" " text-primary">
            Category List
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/categories/create" class="btn rounded btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Category
        </a>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thread>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>

            </th>
        </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Edit
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i>Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
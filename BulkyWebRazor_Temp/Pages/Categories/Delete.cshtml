@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div calls="row pb-2">
            <h2 classs="text-primary"> Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"> </div>  @*ModelOnly does not include property errors associated with a specific field.  None shows none *@
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled class="form-Control" />

        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled class="form-Control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control rounded">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/Index" class="btn rounded btn-outline-Secondary form-control">
                    Back to List
                </a>
            </div>

        </div>

    </div>
</form>
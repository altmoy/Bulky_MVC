@model List<Product>

<div class="card shadow border = 0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center text-white">
                <h2 classs="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6 text-end">
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn rounded btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thread> 
            <tr>
                <th>Title</th>
                <th>Description </th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Category</th>
  
            </tr>
            </thread>
            <tbody>
                @foreach(var obj in Model.OrderBy(u=>u.Title)){
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Price</td>
                    <td>@obj.Author</td>
                    <td></td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controler="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 rounded-3">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                                <a asp-area="Admin" asp-controler="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 rounded-3">
                                <i class="bi bi-trash3-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>  

</div>